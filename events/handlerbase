#ifndef HANDLERBASE_INCLUDED
#define HANDLERBASE_INCLUDED

#include "handlervisitor"

///
/// Handler base class
///
class Handler
{
public:
    ///
    /// Virtual destructor.
    ///
    virtual ~Handler() {}
    ///
    /// Accept visitor base method.
    ///
    virtual void Accept(HandlerVisitor& visitor)
    {
        visitor.Visit(*this);
    };
};

#endif // HANDLERBASE_INCLUDED
